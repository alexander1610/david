#include <Servo.h>
 

Servo base;
Servo antebrazo;
Servo brazo;
Servo garra;
void setup() {
  base.attach(11);
  antebrazo.attach(10);
  brazo.attach(9);
  garra.attach(8);
}

void loop() {
  garra.write(100);
  brazo.write(0);
  antebrazo.write(0);
  base.write(0);
  delay(1000);
  
  
 
  for (int i=0; i<=90; i++){
  base.write(i);
  delay(30);
  }
  for (int i=0; i<=40; i++){
     
  brazo.write(i);
  delay(50);
  }
  for (int i=0; i<=55; i++){
     
  antebrazo.write(i);
  delay(50);
  }
  for (int i=100; i<=129; i++){
     
  garra.write(i);
  delay(50);
  }
  
  for (int i=54; i>0;i--){
    antebrazo.write(i);
    delay(50);
  }
  for (int i=39; i>0;i--){
    brazo.write(i);
    delay(50);
  }
   for (int i=90; i<=180; i++){
  base.write(i);
  delay(30);
  }
  for (int i=0; i<=40; i++){
     
  brazo.write(i);
  delay(50);
  }
  for (int i=0; i<=55; i++){
     
  antebrazo.write(i);
  delay(50);
  }
  for (int i=123; i>100;i--){
    garra.write(i);
    delay(50);
  }
  for (int i=54; i>0;i--){
    antebrazo.write(i);
    delay(50);
  }
  for (int i=39; i>0;i--){
    brazo.write(i);
    delay(50);
  }
   for (int i=179; i>90; i--){
  base.write(i);
  delay(50);
  }
  for (int i=0; i<=40; i++){
     
  brazo.write(i);
  delay(50);
  }
  for (int i=0; i<=55; i++){
     
  antebrazo.write(i);
  delay(50);
  }
  for (int i=100; i<=129;i++){
    garra.write(i);
    delay(50);
  }
  for (int i=54; i>0;i--){
    antebrazo.write(i);
    delay(50);
  }
  for (int i=39; i>0;i--){
    brazo.write(i);
    delay(50);
  }
   for (int i=90; i>0; i--){
  base.write(i);
  delay(30);
  }
  for (int i=0; i<=40; i++){
     
  brazo.write(i);
  delay(30);
  }
  for (int i=0; i<=55; i++){
     
  antebrazo.write(i);
  delay(30);
  }
  for (int i=123; i>100;i--){
    garra.write(i);
    delay(40);
  }
  for (int i=54; i>0;i--){
    antebrazo.write(i);
    delay(30);
  }
  for (int i=39; i>0;i--){
    brazo.write(i);
    delay(30);
  }
}
 
